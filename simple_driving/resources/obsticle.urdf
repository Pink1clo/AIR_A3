<?xml version="1.0"?> 
<robot name="wall_obstacle">

    <!-- Colors --> 
    <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>

    <!-- Wall -->
    <link name="base_link">
        
        <!-- Visual representation -->
        <visual>
            <geometry>
                <!-- Box dimensions: x (width), y (depth), z (height) -->
                <box size="4 0.2 1"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.5"/>
            <material name="grey"/>
        </visual>

        <!-- Collision for physics simulation -->
        <collision> 
            <geometry> 
                <box size="4 0.2 1"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.5"/>
        </collision>

        <!-- Physical properties -->
        <inertial> 
            <mass value="20.0"/> <!-- A reasonable wall mass -->
            <inertia 
                ixx="1.0" ixy="0.0" ixz="0.0" 
                iyy="1.0" iyz="0.0" 
                izz="1.0"/>
        </inertial>
    </link>
</robot>
